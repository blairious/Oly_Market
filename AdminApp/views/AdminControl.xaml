<Window x:Class="AdminApp.views.AdminControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp.views"
        mc:Ignorable="d"
        Title="AdminControl" Height="600" Width="950">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height=".1*"/>
            <RowDefinition/>
            <RowDefinition Height=".1*"/>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width=".1*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width=".1*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width=".5*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.ColumnSpan="2" Grid.RowSpan="4" Source="/images/olymarketlogo.png" Stretch="Fill"/>
        <Button x:Name="CreateCard" Content="Create Gift Card" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Width="160" Grid.ColumnSpan="2" Height="31" Background="#FF155244" Foreground="White" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="AdjustFunds" Content="Adjust Funds" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Width="160" Grid.ColumnSpan="2" Height="31" Background="#FF155244" Foreground="White" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="VendorAccounts" Content="Vendor Accounts" HorizontalAlignment="Center" Grid.Row="8" VerticalAlignment="Center" Width="160" Grid.ColumnSpan="2" Height="31" Background="#FF155244" Foreground="White" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="SignOut" Content="Sign Out" HorizontalAlignment="Center" Grid.Row="10" VerticalAlignment="Center" Width="160" Grid.ColumnSpan="2" Height="31" Background="#FF155244" Foreground="White" FontWeight="Bold" FontSize="16"/>
        <DataGrid Grid.Column="2" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=6}" Grid.ColumnSpan="6" Margin="0,0,26,31" Grid.RowSpan="9" SelectionChanged="DataGrid_SelectionChanged"/>
        <TextBlock Text="Transaction Ledger:" FontSize="16" FontWeight="Bold" Grid.Column="2" VerticalAlignment="Bottom"/>
        <TextBox Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Data Lookup" Width="319" Foreground="Gray"/>
        <TextBox Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Month" Width="140" Foreground="Gray"/>
        <TextBox Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Year" Width="140" Foreground="Gray"/>
    </Grid>
</Window>
