<Window x:Class="AdminApp.views.CreateCard2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp.views"
        mc:Ignorable="d"
        Title="New Card" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
            <RowDefinition Height=".5*"/>
            <RowDefinition/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Card Number:" Grid.Row="0" Foreground="Black" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="CNumber" Text="{Binding Path=CardNumber}" Grid.Row="1" />
        <Button x:Name="PrintCard" Content="Print Code" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="160" Grid.ColumnSpan="2" Height="31" Background="#FF155244" Foreground="White" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="Exit" Content="Exit" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Width="160" Grid.ColumnSpan="2" Height="31" Background="#FF155244" Foreground="White" FontWeight="Bold" FontSize="16" IsCancel="True"/>
    </Grid>
</Window>
