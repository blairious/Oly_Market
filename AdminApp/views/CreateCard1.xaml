<Window x:Class="AdminApp.views.CreateCard1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp.views"
        mc:Ignorable="d"
        Title="Create Card" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height=".5*"/>
            <RowDefinition/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>

        <Button x:Name="ConfirmCard" Content="Confirm Gift Card" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="160" Grid.ColumnSpan="2" Height="31" Background="#FF155244" Foreground="White" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Width="160" Grid.ColumnSpan="2" Height="31" Background="#FF155244" Foreground="White" FontWeight="Bold" FontSize="16" IsCancel="True"/>
        <TextBox Grid.Row="1" TextWrapping="Wrap" Text="Amount Paid" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="207" Height="39" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
